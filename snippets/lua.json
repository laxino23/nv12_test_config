{
  "Function": {
    "prefix": "fn",
    "body": ["local function ${1:name}(${2:args})", "\t${3:-- body}", "end"],
    "description": "Create a local function"
  },
  "Anonymous Function": {
    "prefix": "afn",
    "body": ["function(${1:args})", "\t${2:-- body}", "end"],
    "description": "Create an anonymous function"
  },
  "Arrow Function": {
    "prefix": "lam",
    "body": "function(${1:args}) ${2:return} end",
    "description": "Create a lambda/arrow function"
  },
  "Local Variable": {
    "prefix": "loc",
    "body": "local ${1:name} = ${2:value}",
    "description": "Create a local variable"
  },
  "If Statement": {
    "prefix": "if",
    "body": ["if ${1:condition} then", "\t${2:-- body}", "end"],
    "description": "If statement"
  },
  "If-Else Statement": {
    "prefix": "ife",
    "body": [
      "if ${1:condition} then",
      "\t${2:-- if body}",
      "else",
      "\t${3:-- else body}",
      "end"
    ],
    "description": "If-else statement"
  },
  "For Loop (numeric)": {
    "prefix": "for",
    "body": ["for ${1:i} = ${2:1}, ${3:10} do", "\t${4:-- body}", "end"],
    "description": "Numeric for loop"
  },
  "For Loop (ipairs)": {
    "prefix": "fori",
    "body": [
      "for ${1:i}, ${2:v} in ipairs(${3:table}) do",
      "\t${4:-- body}",
      "end"
    ],
    "description": "For loop with ipairs"
  },
  "For Loop (pairs)": {
    "prefix": "forp",
    "body": [
      "for ${1:k}, ${2:v} in pairs(${3:table}) do",
      "\t${4:-- body}",
      "end"
    ],
    "description": "For loop with pairs"
  },
  "While Loop": {
    "prefix": "while",
    "body": ["while ${1:condition} do", "\t${2:-- body}", "end"],
    "description": "While loop"
  },
  "Require": {
    "prefix": "req",
    "body": "local ${1:module} = require(\"${2:module}\")",
    "description": "Require a module"
  },
  "Lua require setup full": {
    "prefix": "reqsetup",
    "body": ["require(\"${1:module}\").setup({", "  ${2}", "})$0"],
    "description": "require setup"
  },
  "Protected Call": {
    "prefix": "pcall",
    "body": [
      "local ok, ${1:result} = pcall(${2:func}, ${3:args})",
      "if not ok then",
      "\t${4:-- handle error}",
      "end"
    ],
    "description": "Protected call with error handling"
  },
  "Table": {
    "prefix": "tbl",
    "body": ["local ${1:name} = {", "\t${2:-- content}", "}"],
    "description": "Create a table"
  },
  "Module": {
    "prefix": "mod",
    "body": ["local M = {}", "", "${1:-- module content}", "", "return M"],
    "description": "Create a module"
  },
  "Vim Keymap": {
    "prefix": "vmap",
    "body": "vim.keymap.set(\"${1:n}\", \"${2:<leader>}\", ${3:function}, { desc = \"${4:description}\" })",
    "description": "Set a vim keymap"
  },
  "Vim API Autocmd": {
    "prefix": "vau",
    "body": [
      "vim.api.nvim_create_autocmd(\"${1:event}\", {",
      "\tpattern = \"${2:*}\",",
      "\tcallback = function()",
      "\t\t${3:-- body}",
      "\tend,",
      "})"
    ],
    "description": "Create an autocmd"
  },
  "Vim API Command": {
    "prefix": "vcmd",
    "body": [
      "vim.api.nvim_create_user_command(\"${1:CommandName}\", function(${2:opts})",
      "\t${3:-- body}",
      "end, { desc = \"${4:description}\" })"
    ],
    "description": "Create a user command"
  },
  "Print Debug": {
    "prefix": "pr",
    "body": "print(vim.inspect(${1:variable}))",
    "description": "Print and inspect a variable"
  },
  "Comment Block": {
    "prefix": "cmt",
    "body": [
      "---${1:description}",
      "---@param ${2:param} ${3:type}",
      "---@return ${4:type}"
    ],
    "description": "Function documentation comment"
  },
  "Try-Catch Pattern": {
    "prefix": "try",
    "body": [
      "local success, ${1:result} = pcall(function()",
      "\t${2:-- try block}",
      "end)",
      "",
      "if not success then",
      "\t${3:-- catch block}",
      "end"
    ],
    "description": "Try-catch pattern using pcall"
  },
  "String Format": {
    "prefix": "fmt",
    "body": "string.format(\"${1:%s}\", ${2:args})",
    "description": "String format"
  },
  "Table Insert": {
    "prefix": "tins",
    "body": "table.insert(${1:table}, ${2:value})",
    "description": "Insert into table"
  },
  "Vim Option": {
    "prefix": "vopt",
    "body": "vim.opt.${1:option} = ${2:value}",
    "description": "Set vim option"
  },
  "Vim Global": {
    "prefix": "vg",
    "body": "vim.g.${1:variable} = ${2:value}",
    "description": "Set vim global variable"
  },
  "Lua vim.pack.add minimal src only": {
    "prefix": "pack",
    "body": ["vim.pack.add({", "  { src = \"https://github.com/\" }", "})"],
    "description": "multiline add a package"
  },
  "Lua vim.pack.add one-liner": {
    "prefix": "packsrc",
    "body": "{ src = \"https://github.com/\" }",
    "description": "singleline ad a package"
  }
}
